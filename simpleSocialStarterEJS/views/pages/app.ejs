            <h4>New post</h4>
            <form action="/newpost" method="POST">
                <label>message</label>
                <input type="text" id="message" name="message">
                <input type="submit" value="post message">
            </form>
            <h4>Recent posts</h4>
            <ul id="recent-posts">

                <% posts.forEach(post=>{ %>
                    <li>
                        <p>message: <%= post.message %> by user: <%= post.user %></p>
                    </li>
                    <% }) %>

            </ul>
